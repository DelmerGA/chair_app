<h1>Edit Your Chair</h1>
	<%= form_for @chair do |f| %>
	
  		<%= label_tag(:name, "Type:") %>
  		<%= f.text_field :name %></br>

  		<%= label_tag(:description, "Description") %>
  		<%= f.text_area :description %>
  <br></br>
  		<%= image_tag @chair.image(:square) %></br>

  		<%= f.submit "Update", :class => ' btn btn-info' %>
<br></br>
  		<%= link_to "Delete", chair_path, :method => :delete, data: { :confirm => 'Are you sure?'}, :class => 'btn btn-danger' %>
	<% end %>


